{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "numReplicas": 1,
    "startCommand": "sh /app/entrypoint.sh",
    "healthcheckPath": "/health",
    "healthcheckInterval": 30,
    "healthcheckTimeout": 10
  }
}
