# Backend environment variables
# Copy this file to .env and update with your values

# Application
APP_NAME="AI Video Editor Platform"
DEBUG=False
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_video_editor

# JWT
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# S3/MinIO
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_ENDPOINT_URL=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=ai-video-editor
S3_USE_SSL=False

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost","http://frontend:3000"]

# Ollama
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3

# File Processing
MAX_FILE_SIZE=524288000
TEMP_DIR=/tmp/ai_video_editor
VIDEO_CODEC=libx264
VIDEO_PRESET=medium
AUDIO_CODEC=aac
VIDEO_BITRATE=2500k
AUDIO_BITRATE=192k
